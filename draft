    <!-- QR Code Modal -->
    <div id="qr-modal" class="modal-overlay fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center p-4 z-50 hidden opacity-0">
        <div class="modal-content bg-white rounded-2xl shadow-2xl p-8 max-w-2xl w-full relative transform scale-95">
            <button id="close-qr-modal" class="absolute top-4 right-4 text-gray-500 hover:text-gray-800">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path></svg>
            </button>
            <h3 class="text-2xl font-bold text-center mb-6">Scan to Pay</h3>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                <div class="text-center">
                    <h4 class="text-xl font-semibold mb-2">Pay with ZelleÂ®</h4>
                    <img src="https://i.imgur.com/CZID90b.png" alt="Zelle QR Code" class="w-48 h-48 mx-auto rounded-lg shadow-md" onerror="this.onerror=null; this.src='https://placehold.co/192x192/9333ea/FFFFFF?text=Zelle+QR';">
                    <p class="text-sm text-gray-600 mt-2">Use your mobile banking app to scan.</p>
                </div>
                <div class="text-center">
                    <h4 class="text-xl font-semibold mb-2">Pay with Givebutter</h4>
                    <img src="https://i.imgur.com/qGIfPuL.png" alt="Givebutter QR Code" class="w-48 h-48 mx-auto rounded-lg shadow-md" onerror="this.onerror=null; this.src='https://placehold.co/192x192/059669/FFFFFF?text=Givebutter+QR';">
                    <p class="text-sm text-gray-600 mt-2">Scan here for Givebutter donations.</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Custom Alert Modal -->
    <div id="alert-modal" class="alert-overlay fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center p-4 z-[60] hidden opacity-0">
        <div class="alert-content bg-white rounded-2xl shadow-2xl p-8 max-w-sm w-full relative transform scale-95 text-center">
            <h3 id="alert-title" class="text-2xl font-bold text-gray-800 mb-4">Confirm Donation</h3>
            <p id="alert-message" class="text-gray-600 mb-6">Message here</p>
            <button id="close-alert-modal" class="bg-sage-green text-white font-bold py-2 px-6 rounded-full btn">OK</button>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // --- Modal/Alert Opening/Closing Function ---
            const setupModal = (modalId, openBtnIds, closeBtnId) => {
                const modal = document.getElementById(modalId);
                if (!modal) return;
                const closeBtn = document.getElementById(closeBtnId);
                const modalContent = modal.querySelector('.modal-content, .alert-content');

                const openModal = () => {
                    modal.classList.remove('hidden');
                    setTimeout(() => {
                        modal.classList.remove('opacity-0');
                        if (modalContent) modalContent.classList.remove('scale-95');
                    }, 10);
                };

                const closeModal = () => {
                    modal.classList.add('opacity-0');
                    if (modalContent) modalContent.classList.add('scale-95');
                    setTimeout(() => modal.classList.add('hidden'), 300);
                };

                openBtnIds.forEach(id => {
                    const openBtn = document.getElementById(id);
                    if (openBtn) openBtn.addEventListener('click', openModal);
                });

                if (closeBtn) closeBtn.addEventListener('click', closeModal);
                modal.addEventListener('click', e => e.target === modal && closeModal());
                document.addEventListener('keydown', e => e.key === 'Escape' && !modal.classList.contains('hidden') && closeModal());
                
                return { openModal, closeModal };
            };

            // --- Setup Modals ---
            const qrModalControls = setupModal('qr-modal', ['open-qr-modal', 'pay-givebutter', 'pay-zelle'], 'close-qr-modal');
            const alertModalControls = setupModal('alert-modal', [], 'close-alert-modal');

            // --- Mobile Menu Logic ---
            const mobileMenuButton = document.getElementById('mobile-menu-button');
            const mobileMenu = document.getElementById('mobile-menu');
            mobileMenuButton.addEventListener('click', () => mobileMenu.classList.toggle('hidden'));
            const mobileMenuLinks = mobileMenu.getElementsByTagName('a');
            for (let link of mobileMenuLinks) {
                link.addEventListener('click', () => mobileMenu.classList.add('hidden'));
            }

            // --- Donation Form & Feedback Logic ---
            const oneTimeTab = document.getElementById('one-time-tab');
            const monthlyTab = document.getElementById('monthly-tab');
            const oneTimeAmounts = document.getElementById('one-time-amounts');
            const monthlyAmounts = document.getElementById('monthly-amounts');
            const donationFeedback = document.getElementById('donation-feedback');

            function updateDonationFeedback() {
                let amount = 0;
                let frequency = '';
                const activeTab = oneTimeTab.classList.contains('active') ? oneTimeAmounts : monthlyAmounts;
                frequency = oneTimeTab.classList.contains('active') ? 'one-time' : 'monthly';
                const selectedBtn = activeTab.querySelector('.amount-option.selected');

                if (selectedBtn) {
                    if (selectedBtn.tagName === 'INPUT') {
                        amount = selectedBtn.value;
                    } else {
                        amount = selectedBtn.dataset.amount;
                    }
                }

                if (amount && parseFloat(amount) > 0) {
                    donationFeedback.textContent = `You've selected a $${amount} ${frequency} donation.`;
                } else {
                    donationFeedback.textContent = '';
                }
            }

            oneTimeTab.addEventListener('click', () => {
                oneTimeTab.classList.add('active');
                monthlyTab.classList.remove('active');
                oneTimeAmounts.classList.remove('hidden');
                monthlyAmounts.classList.add('hidden');
                updateDonationFeedback();
            });

            monthlyTab.addEventListener('click', () => {
                monthlyTab.classList.add('active');
                oneTimeTab.classList.remove('active');
                monthlyAmounts.classList.remove('hidden');
                oneTimeAmounts.classList.add('hidden');
                updateDonationFeedback();
            });

            function handleAmountSelection(container) {
                const amountOptions = container.querySelectorAll('.amount-option');
                const customAmountInput = container.querySelector('input[type="number"]');

                amountOptions.forEach(button => {
                    button.addEventListener('click', function() {
                        if (this.tagName === 'INPUT') return;
                        amountOptions.forEach(btn => btn.classList.remove('selected'));
                        this.classList.add('selected');
                        if(customAmountInput) customAmountInput.value = '';
                        updateDonationFeedback();
                    });
                });

                if (customAmountInput) {
                    customAmountInput.addEventListener('input', function() {
                         if(this.value) {
                             amountOptions.forEach(btn => {
                                 if(btn.tagName !== 'INPUT') btn.classList.remove('selected');
                             });
                             this.classList.add('selected');
                         }
                         updateDonationFeedback();
                    });
                }
            }
            
            handleAmountSelection(oneTimeAmounts);
            handleAmountSelection(monthlyAmounts);
            updateDonationFeedback(); // Initial call

            // --- Donate Now Button Logic ---
            const donateNowBtn = document.getElementById('donate-now-btn');
            const alertMessage = document.getElementById('alert-message');

            donateNowBtn.addEventListener('click', () => {
                const feedbackText = donationFeedback.textContent;
                if (feedbackText) {
                    alertMessage.textContent = `Thank you for your generous commitment. Please proceed with your chosen payment method to finalize your donation.`;
                } else {
                    alertMessage.textContent = 'Please select or enter a valid donation amount.';
                }
                alertModalControls.openModal();
            });
            
            // --- Scroll Animations & Active Nav Logic ---
            const sections = document.querySelectorAll('section[id]');
            const navLinks = document.querySelectorAll('#main-nav a');

            const observer = new IntersectionObserver(entries => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.classList.add('is-visible');
                    }
                });
            }, { threshold: 0.1 });
            
            const navObserver = new IntersectionObserver(entries => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        navLinks.forEach(link => {
                            link.classList.toggle('active', link.getAttribute('href').substring(1) === entry.target.id);
                        });
                    }
                });
            }, { rootMargin: "-50% 0px -50% 0px" });

            sections.forEach(section => {
                observer.observe(section);
                navObserver.observe(section);
            });
        });
    </script>
</body>
</html>
